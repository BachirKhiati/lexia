# Synapse Backend - Production Environment Configuration
# Copy this file to .env.production and fill in your values
# WARNING: Never commit .env.production to version control!

# ======================
# Server Configuration
# ======================
PORT=8080
ENV=production

# ======================
# Database Configuration
# ======================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lexia_db
DB_USER=lexia
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ======================
# Redis Configuration
# ======================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# ======================
# JWT Configuration
# ======================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_64_CHAR_MINIMUM_SECRET_HERE
JWT_ISSUER=lexia-production

# ======================
# AI Provider Configuration
# ======================
# Anthropic Claude API
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here

# Google Gemini API
GEMINI_API_KEY=AIza-your-gemini-api-key-here

# Default provider (claude or gemini)
DEFAULT_AI_PROVIDER=claude

# ======================
# CORS Configuration
# ======================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://lexia.yourdomain.com,https://www.lexia.yourdomain.com

# ======================
# Language Configuration
# ======================
DEFAULT_LANGUAGE=finnish

# ======================
# Optional: Email Configuration
# ======================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com

